<div class="container-fluid" >
	<div class="row-fluid" >
		<div class="span8" >
			<div class="photos">
			<div class="text">
				<% if @photo.caption != nil%>
					<i><%= @photo.caption.text%></i>	
				<% end %>	
			</div>	
			<div class="photo_one">
					<img src="<%= @photo.images.standard_resolution.url %>">
			</div>

			</div>
		</div>
		<div class="span4" >
			<div class="photo_information">
				<div class="photo_user">
					<img src="<%= @photo.user.profile_picture %>">	
				</div>
				<div class="name_user">
					<strong><%= @photo.user.full_name %></strong>
				</div>	
			</div>
	
			<span class="post_time"><%= time_ago_in_words Time.at(@photo.created_time.to_i) %> ago</span>
			<strong>/</strong>
			<span class="filter"><%= @photo.filter %></span>
			
			<div class="photo_like">
				<i class="icon-heart"> Likes: <strong> <%= @photo.likes['count'] %></strong></i>
				<br/>
				<i class="icon-comment"> Comments: <strong> <%= @photo.comments['count'] %></strong></i>
				<br/>
				<i class="icon-picture"> Filter: <strong> <%= @photo.filter %></strong></i>
			</div>
			<div class="share">
					<iframe  allowtransparency="true" frameborder="0" scrolling="no" src="//platform.twitter.com/widgets/tweet_button.html?lang=en&amp;url=<%= @photo.linke %>&amp;text=instagram&amp;count=horizontal&amp;via=instagram" style="border:none; overflow:hidden; width:100px; height:35px;" ></iframe>
					<iframe src="//www.facebook.com/plugins/like.php?href=<%= @photo.link %>&amp;send=false&amp;layout=button_count&amp;width=450&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font=arial&amp;height=35" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100px; height:35px;" allowTransparency="true"></iframe>
			</div>
		</div>	
	</div>
</div>	